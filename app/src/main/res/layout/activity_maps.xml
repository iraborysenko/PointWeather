<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.map.MapsActivity" />

    <EditText
        android:id="@+id/search_query"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="textPersonName"
        android:hint="@string/search" />

    <ImageButton
        android:id="@+id/weather_forecast"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/forecast"
        android:layout_toRightOf="@id/weather_current"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/weather_current"
        android:layout_margin="10dp" />

    <ImageButton
        android:id="@+id/weather_current"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/current"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</RelativeLayout>
